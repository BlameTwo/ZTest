<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:SimpleUI.Controls">
    <Style x:Key="NavigationViewItemBase" TargetType="{x:Type ui:NavigationViewLine}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:NavigationViewLine}">
                    <Viewbox Stretch="Fill">
                        <Canvas Width="1.0" Height="1.0">
                            <Line
                                Stroke="{DynamicResource Navigation.LineBrush}"
                                StrokeThickness="{TemplateBinding StrokeThickness}"
                                X1="0"
                                X2="1"
                                Y1="0"
                                Y2="1" />
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>