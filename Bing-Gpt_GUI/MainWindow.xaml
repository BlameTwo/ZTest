                <CheckBox Content="你好" />
                <RadioButton Content="选择我" GroupName="1" />
                <RadioButton Content="选择我" GroupName="1" />
            </StackPanel>
        </ui:Expander>
        <ListBox Grid.Row="1" Margin="10">
            <ListBoxItem Content="你好" />
