<Application
    x:Class="SonsOfTheForesrtSave_GUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="clr-namespace:SonsOfTheForesrtSave_GUI.Converter"
    xmlns:local="clr-namespace:SonsOfTheForesrtSave_GUI"
    xmlns:style="clr-namespace:SimpleUI.Styles;assembly=SimpleUI"
    xmlns:theme="clr-namespace:SimpleUI.Themes;assembly=SimpleUI">
    <Application.Resources>
        <ResourceDictionary>
            <convert:PackageIDConvert x:Key="PackageIDConvert" />
            <convert:WordSaveTypeConverter x:Key="WordSaveType" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/DatatTemplates/ConfigurationDataTemplate.xaml" />
                <theme:Theme Type="Dark" />
                <style:SimpleStyle Type="Default" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
