<Page
    x:Class="SonsOfTheForesrtSave_GUI.Views.UpdateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:config="clr-namespace:SonsOfTheForesrtSave_GUI.Resources"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SonsOfTheForesrtSave_GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:SimpleUI.Controls;assembly=SimpleUI"
    Title="UpdateView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <ui:ActionCard
            Margin="10"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Header="版本"
            Icon="AppIconDefault"
            SubTitle="这是存档修改器的版本">
            <ui:ActionCard.Description>
                <TextBlock Text="{x:Static config:AppConfig.Version}" />
            </ui:ActionCard.Description>
        </ui:ActionCard>
        <ui:ActionCard
            Margin="10"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Header="制作人员"
            Icon="Webcam"
            SubTitle="这是提供对比数据和主要逻辑书写的人员">
            <ui:ActionCard.Description>
                <TextBlock Text="{x:Static config:AppConfig.By}" />
            </ui:ActionCard.Description>
        </ui:ActionCard>
    </StackPanel>
</Page>
