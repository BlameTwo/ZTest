<Page
    x:Class="SonsOfTheForesrtSave_GUI.Views.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SonsOfTheForesrtSave_GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:SimpleUI.Controls;assembly=SimpleUI"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    Foreground="{DynamicResource DefaultAppFillBrush}"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <ui:Card
            Padding="25"
            Header="首页"
            Icon="People">
            <ui:Card.Content>
                <StackPanel>
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="35"
                        Text="欢迎，" />
                    <TextBlock Margin="0,10,0,0" Text="本软件仅对于前先体验的森林之子有效" />
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Text="使用某一功能前请备份文件" />
                </StackPanel>
            </ui:Card.Content>
        </ui:Card>
    </Grid>
</Page>
